@font-face {
  font-family: 'Poppins';
  src: url("{{ 'Poppins-Regular.ttf' | asset_url }}");
}

body {
  background-color: #000;
  font-family: 'Poppins';
  margin: 0;
}

textarea:focus, input:focus{
  outline: none;
}

.form-search {
  position: relative;
  margin: 0;
}

.input-search {
  background: transparent;
  color: rgba(255, 255, 255, .6);
  border: none;
  border-bottom: 1px solid rgba(255, 255, 255, .6);
  padding-right: 40px;
  width: 100%;
}

.input-search::placeholder {
  font-style: italic;
}

.input-search:hover, .input-search:focus {
  outline: none;
}

.icon-btn {
  background: transparent;
  position: absolute;
  right: 0;
  bottom: 5px;
  border: none;
}

.icon-btn:focus, .icon-btn:hover {
  outline: none;
}

.theme-btn {
  font-family: 'Poppins';
  font-style: normal;
  font-weight: 400;
  font-size: 14px;
  line-height: 120%;
  text-transform: capitalize;
  background-color: transparent;
  color: #FFFFFF;
  border: 1px solid rgba(255, 255, 255, .5);
  border-radius: .4rem;
  padding: 10px 12px;
}

.theme-btn:hover {
  background-color: #fff;
  color: #000;
}

.theme-btn:hover, .theme-btn:focus {
  outline: none;
}

.theme-btn:hover path {
  fill: #000;
}

.cart__link {
  color: #fff;
  font-size: 14px;
  line-height: 120%;
}

.cart__link:hover {
  color: #fff;
}

.navbar__row {
  display: flex;
  color: white;
}

.navbar__item {
  padding-right: 8px;
}

.navbar__items {
  display: flex;
}

.navbar__item-brand {
  display: flex;
  align-items: center;
}

.navbar__items--right {
  display: flex;
  align-items: center;
  margin-left: auto;
}

.navbar__item-search {
  margin-right: 1rem;
}

.navbar__item-toggle {
  display: none;
}

.navbar__item-cart {
  margin-left: 1rem;
}

.navbar__column {
  margin-top: .5rem;
}

.navbar__column-toggleshow {
  display: none;
}

.navbar__item-fluid {
  color: rgba(255, 255, 255, .6);
  text-transform: capitalize;
  padding: 6px 10px;
  border-bottom: 1px solid rgba(255, 255, 255, .5);
  cursor: pointer;
}

.navbar__item-fluid:hover {
  background-color: #fff;
  color: #000;
}

/* @media only screen and (max-width: 768px) { */
@media only screen and (max-width: 992px) {
  .navbar__items {
    display: none;
  }
   
  .navbar__item-brand {
    display: none;
  }

  .navbar__items--right {
    margin-left: 0;
    width: 100%;
  }
  
  .navbar__item-toggleshow {
    display: none;
  }

  .navbar__item-toggle {
    display: initial;
    cursor: pointer;
  }

  .navbar__item-search {
    flex: 1;
    margin-right: 0;
  }

  .navbar__item-cart {
    margin-left: 0;
  }

  .cart-count {
    vertical-align: middle;
    display: none;
  }
}


.banner {
  padding: 2rem 2rem 2rem;
  background: #1D1E20 url("{{ 'banner.png' | asset_url }}") no-repeat bottom right;
  background-size: contain;
  background-blend-mode: exclusion;
  border-radius: .4rem;
}

.banner-title {
  font-family: 'Poppins';
  font-weight: 700;
  font-size: 2.5rem;
  color: #fff;
  margin: 0;
}

.banner-subtitle {
  color: #fff;
  font-weight: 600;
  margin: 0.5rem 0 1rem;
}

.banner-subtitle span {
  color: #aaa;
}

.banner-desc {
  margin: 0;
  color: #fff;
  font-weight: 300;
  font-size: 0.75rem;
  opacity: .5;
  width: 40%;
  padding-left: 1rem;
  border-left: 3px solid #fff;
  line-height: 180%;
}

.brand-mobile {
  display: none;
  text-align: center;
  padding: 1.5rem 0 1rem;
}

@media only screen and (max-width: 992px) {
  .brand-mobile {
    display: block;
  }

  .banner {
    background-image: none;
  }

  .banner-desc {
    width: 100%;
  }
}


.collections {
  margin-top: 3rem;
}

.collection__title {
  font-size: 1.8rem;
  font-weight: 700;
  text-transform: capitalize;
  color: #fff;
  margin: 1rem 0;
}

.card_product {
  margin-bottom: 5rem;
}

.featured_product {
  display: block;
  position: relative;
  background-color: #1D1E20;
  border-radius: .4rem;
  padding: 4rem 2rem 3rem;
}

.featured_product:hover {
  text-decoration: none;
}

.best_seller--tag {
  position: absolute;
  background-color: #000;
  color: #fff;
  border: 2px solid #34383E;
  padding: 0 0.5rem;
  transform: translateY(-100%);
}

.featured_product__title {
  font-size: 1rem;
  font-weight: 300;
  line-height: 160%;
  color: #fff;
  text-align: center;
  margin-top: 1.5rem;
}

.product_name-prefix {
  font-weight: 700;
}

.featured_product-prices {
  text-align: center;
  margin-top: .3rem;
}

.featured_product__price {
  font-size: 1.25rem;
  font-weight: 700;
  color: #fff;
}

.featured_product__compare_price {
  font-size: 0.8rem;
  font-weight: 700;
  color: #aaa;
  margin-left: .25rem;
}

.add_to_cart--button {
  position: absolute;
  background-color: #1d1e20;
  padding: 1rem;
  border: 1px solid #fff;
  border-radius: 0.3rem;
  left: 50%;
  bottom: 0;
  transform: translate(-50%, 50%);
  cursor: pointer;
}

.add_to_cart--button:hover {
  background-color: #fff;
}

.add_to_cart--button:hover path {
  stroke: #000;
}

.add_to_cart--label {
  margin: 0;
  color: rgba(255, 255, 255, .6);
  font-size: .75rem;
  text-transform: capitalize;
  text-align: center;
  position: absolute;
  bottom: -3.5rem;
  transform: translateX(-50%);
  left: 50%;
}
